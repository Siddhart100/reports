REPORT ZPRG2_ORDER_HEADER_DETAILS.

TYPES: BEGIN OF LTY_DATA,
         ORDNO TYPE ZDEORDNO,
         ODATE TYPE ZDEODATE,
         TA    TYPE ZDETC,
         CURR  TYPE ZDECUR,
       END OF LTY_DATA.

DATA: ITAB TYPE TABLE OF LTY_DATA,
      WA   TYPE LTY_DATA.

PARAMETERS: P_ONO TYPE ZDEORDNO.

START-OF-SELECTION.

  SELECT ORDNO ODATE TA CURR
    INTO TABLE ITAB
    FROM ZORDH
    WHERE ORDNO = P_ONO.

  LOOP AT ITAB INTO WA.
    WRITE: / WA-ORDNO, WA-ODATE, WA-TA, WA-CURR.
  ENDLOOP.
